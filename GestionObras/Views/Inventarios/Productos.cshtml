@{
    ViewData["Title"] = "Productos";
}

<br />
<section class="content">
    <div class="container-fluid">
        <div class="container row p-0 m-0">
            <div class="col-6">
                <h2 class="text-info"> Productos </h2>
            </div>
            <div class="col-3 offset-3">
                <a asp-action="UpsertProductos" asp-controller="Inventarios" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Agregar
                </a>
            </div>
            <div class="col-12 border p-3">
                <table id='DT_loadProductos' class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th> Descripcion </th>
                            <th> Precio </th>
                            <th> Observacion </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>



