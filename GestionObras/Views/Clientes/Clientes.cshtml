
@{
    ViewData["Title"] = "Clientes";
}
<br />
<section class="content">
    <div class="container-fluid">
        <div class="container row p-0 m-0">
            <div class="col-6">
                <h2 class="text-info"> Clientes </h2>
            </div>
            <div class="col-3 offset-3">
                <a asp-action="UpsertClientes" asp-controller="Clientes" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Agregar
                </a>
            </div>
            <div class="col-12 border p-3">
                <table id='DT_loadClientes' class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th> N° CUIT </th>
                            <th> Dirección </th>
                            <th> Telefono </th>
                            <th> Email </th>
                            <th>  </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/clientesLista.js"></script>
}
