@model GestionObras.Models.Proveedores

<br />

<h2 class="text-info">@(Model.Id!= 0 ? "Editar":"Crear") Producto </h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post" asp-action="UpsertProveedores">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <!-- RazonSocial -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RazonSocial"></label>
            </div>
            <div class="col-6">
                <input asp-for="RazonSocial" class="form-control-feedback" />
                <br />
                <span asp-validation-for="RazonSocial" class="text-danger"></span>
            </div>
        </div>

        <!-- NRCUIT -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NRCUIT"></label>
            </div>
            <div class="col-6">
                <input asp-for="NRCUIT" class="form-control-feedback" />
                <br />
                <span asp-validation-for="NRCUIT" class="text-danger"></span>
            </div>
        </div>

        <!-- NRCBU -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NRCBU"></label>
            </div>
            <div class="col-6">
                <input asp-for="NRCBU" class="form-control-feedback" />
                <br />
                <span asp-validation-for="NRCBU" class="text-danger"></span>
            </div>
        </div>

        <!-- Direccion -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Direccion"></label>
            </div>
            <div class="col-6">
                <input asp-for="Direccion" class="form-control-feedback" />
                <br />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
        </div>

        <!--  Telefono -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for=" Telefono"></label>
            </div>
            <div class="col-6">
                <input asp-for=" Telefono" class="form-control-feedback" />
                <br />
                <span asp-validation-for=" Telefono" class="text-danger"></span>
            </div>
        </div>

        <!--  Email -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for=" Email"></label>
            </div>
            <div class="col-6">
                <input asp-for=" Email" class="form-control-feedback" />
                <br />
                <span asp-validation-for=" Email" class="text-danger"></span>
            </div>
        </div>
        <!--  -->
        <div class="form-group row">
            <div class="col-3 offset-3">
                @if (Model.Id != 0)
                {
                    <button type="submit" id="ActualizarProducto" class="btn btn-primary form-control">Actualizar</button>
                }
                else
                {
                    <button type="submit" id="CrearProducto" class="btn btn-primary form-control">Crear</button>

                }

                <!--<button type="submit" class="btn btn-primary form-control">-->
                @*@(Model.Id!= 0 ? "Actualizar":"Crear")*@
                <!--</button>-->
            </div>
            <div class="col-3">
                <a asp-action="Proveedores" asp-controller="Proveedores" class="btn btn-success form-control">Regresar</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}