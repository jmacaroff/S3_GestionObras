@model GestionObras.Models.Productos
@*https://www.youtube.com/watch?v=C5cnZ-gZy2I --> min- 3:04:00*@
@*<h2 class="text-info">@()</h2>*@
<br />

<h2 class="text-info">@(Model.Id!= 0 ? "Editar":"Crear") Producto </h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post" asp-action="UpsertProductos">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <!-- Descripcion -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Descripcion"></label>
            </div>
            <div class="col-6">
                <input asp-for="Descripcion" class="form-control-feedback" />
                <br />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <!-- Precio -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Precio"></label>
            </div>
            <div class="col-6">
                <input asp-for="Precio" class="form-control-feedback" />
                <br />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
        </div>

        <!-- Observacion -->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Observacion"></label>
            </div>
            <div class="col-6">
                <input asp-for="Observacion" class="form-control-feedback" />
                <br />
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
        </div>

        <!--  -->
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!= 0 ? "Actualizar":"Crear")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Productos" asp-controller="Inventarios" class="btn btn-success form-control">Regresar a Productos</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    @*El siguiente script soluciona el conflicto al ingresar decimal*@

    <script src="@Url.Content("~/Scripts/jquery.globalize/globalize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.globalize/cultures/globalize.culture.es-Es.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $.validator.methods.number = function (value, element) {
            return !isNaN(Globalize.parseFloat(value));
        }

        $(document).ready(function () {
            Globalize.culture('en');
        });
    </script>
}


